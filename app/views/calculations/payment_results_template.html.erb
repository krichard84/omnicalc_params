<h1>Payment Results</h1>

  <dl>
      <dt>
        APR
      </dt>
      <dd>
    <%= number_to_percentage(@user_apr, precision: 4) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @user_years.round(1) %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= number_to_currency(@user_pv, precision: 2) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= number_to_currency(@payment, precision: 2) %>
  </dd>
</dl>